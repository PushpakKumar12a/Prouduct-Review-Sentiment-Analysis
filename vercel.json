{
    "version": 2,
    "builds": [
        {
            "src": "app.py",
            "use": "@vercel/python"
        },
        {
            "src": "nltk_data/**",
            "use": "@vercel/static"
        },
        {
            "src": "static/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "app.py"
        },
        {
            "src": "/nltk_data/(.*)",
            "dest": "/nltk_data/$1"
        },
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        }
    ]
}
